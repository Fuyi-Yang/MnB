import smtplib
from email.message import EmailMessage


def sendmail(name, receiver):
    email = "fuyi.yang@musicnbrain.org"
    msg = EmailMessage()
    msg['Subject'] = "Email from Pycharm"
    msg['From'] = email
    msg['To'] = receiver

    msg.set_content("Dear {},\n\nI think this is absolutely amazing...\n\nBest Regards,\nFuyi Yang".format(name))

    with smtplib.SMTP_SSL("smtp.gmail.com", 465) as smtp:
        smtp.login(email, "ihstjckwpfjncxub")
        print("Login Success")
        smtp.send_message(msg)
        print("Mail sent to", receiver)


sendmail("Silly Magic", "sillymagic93@gmail.com")
